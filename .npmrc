shamefully-hoist=true # Enable to hoist peer dependencies to the top-level node_modules
strict-peer-dependencies=false # Disable to ignore peer dependency conflicts

# Allow these packages to run build scripts
only-built-dependencies[]=@parcel/watcher   # File watcher (C++ native module)
only-built-dependencies[]=esbuild           # Build tool (downloads binary)
only-built-dependencies[]=vue-demi          # Vue 2/3 compatibility layer